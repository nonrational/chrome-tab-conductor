{
  "manifest_version": 3,
  "name": "Tab Conductor",
  "version": "1.0",
  "description": "Orchestrate your tabs - consolidate windows and tidy up",
  "permissions": [
    "tabs",
    "windows",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gather Tabs"
  }
}