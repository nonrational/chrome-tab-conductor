{
  "manifest_version": 3,
  "name": "Tab Conductor",
  "version": "1.0",
  "description": "Orchestrate your tabs - consolidate windows and tidy up",
  "permissions": [
    "tabs",
    "tabGroups",
    "windows",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gather Tabs",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  }
}